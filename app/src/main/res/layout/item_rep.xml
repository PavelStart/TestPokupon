<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    app:cardCornerRadius="4dp"
    app:cardPreventCornerOverlap="true"
    app:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_item_rep"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_item_rep_name"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="Github"
                android:textColor="@color/Text1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_item_rep_descript"
                android:textSize="16sp"
                android:textColor="@color/Text1"
                android:text="Github library, Github library, Github library, Github library, Github library."
                android:layout_below="@id/tv_item_rep_name"
                android:layout_marginTop="8dp"/>

        </RelativeLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>